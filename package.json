  "homepage": "https://github.com/innopals/tsetse",
  "repository": {
    "type": "git",
    "url": "git@github.com:innopals/tsetse.git"
  },
  "keywords": [
    "LSP",
    "tsetse",
    "typescript"
  ],
  "license": "Apache-2.0",
  "version": "0.0.2",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "LICENSE",
    "README.md",
